<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.v4.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:id="@+id/swLayout_video"
        android:layout_height="match_parent">
        <ListView
            android:layout_width="match_parent"
            android:id="@+id/lv_video"
            android:layout_height="match_parent"></ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
    <org.lenve.customshapeimageview.CustomShapeImageView
        style="@style/refreshButton"
        app:shape="circle"
        android:src="@drawable/refresh_background"
        android:elevation="10dp"/>
    <ImageView
        style="@style/refreshButton"
        android:id="@+id/refresh_video"
        android:elevation="12dp"
        android:src="@drawable/ic_profile_refresh_night" />
</RelativeLayout>