<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.View.user_activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/headLayout"
        android:background="@drawable/ic_profile_header"
        android:layout_height="250dp">
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/back"
            android:src="@drawable/media_back_preview_press"
            android:layout_margin="10dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="我"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:id="@+id/my_username"
            android:textColor="@color/colorText"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/setting"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_setting_pressed"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/skin"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/setting"
            android:src="@drawable/ic_nightmode_deep"
            android:layout_height="40dp" />
        <ImageView
            android:layout_width="50dp"
            android:layout_marginTop="10dp"
            android:id="@+id/my_icon"
            android:src="@drawable/default_round_head"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/my_username"
            android:layout_height="50dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="立即登录"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:padding="3dp"
            android:textColor="@color/colorWhite"
            android:id="@+id/login_now"
            android:background="@drawable/login_now"
            android:textSize="20dp"
            android:layout_below="@+id/my_icon"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="25dp"
            android:layout_alignLeft="@+id/login_now"
            android:drawablePadding="5dp"
            android:id="@+id/publish"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_profile_publish"
            android:layout_below="@+id/login_now"
            android:textColor="@color/colorWhite"
            android:layout_height="25dp" />
        <ImageView
            android:layout_width="25dp"
            android:layout_alignRight="@+id/login_now"
            android:drawablePadding="5dp"
            android:layout_marginTop="20dp"
            android:id="@+id/feedback"
            android:src="@drawable/ic_profile_feedback"
            android:layout_below="@+id/login_now"
            android:textColor="@color/colorWhite"
            android:layout_height="25dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/publish"
            android:text="投稿"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/publish"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/feedback"
            android:text="反馈"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="5dp"
            android:layout_alignLeft="@+id/feedback"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RadioGroup
        android:layout_width="match_parent"
        android:layout_below="@+id/headLayout"
        android:orientation="horizontal"
        android:id="@+id/radiogroup_login"
        android:layout_height="50dp">
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:button="@null"
            android:textColor="@color/colorText"
            android:text="投稿"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/colorText"
            android:button="@null"
            android:text="收藏"
            android:layout_height="match_parent" />
        <RadioButton
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_weight="1"
            android:textColor="@color/colorText"
            android:button="@null"
            android:text="评论"
            android:layout_height="match_parent" />
    </RadioGroup>
    <ImageView
        android:layout_width="match_parent"
        android:src="@drawable/ic_no_login"
        android:id="@+id/no_login_image"
        android:layout_below="@+id/radiogroup_login"
        android:layout_height="100dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/no_login_image"
        android:text="你还没有登录"
        android:id="@+id/no_login_text"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="260dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/no_login_text"
        android:text="登录后内容永久保留，一键分享内容到各大平台"
        android:gravity="center"
        android:textSize="18dp"
        android:layout_height="wrap_content" />

</RelativeLayout>
