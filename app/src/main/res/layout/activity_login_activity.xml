<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.qf.neihanduanzi.home.View.login_activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/colorTitle"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_marginLeft="10dp"
            android:id="@+id/back"
            android:src="@drawable/media_back_preview_press"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="登录"
            android:textColor="@color/colorCategroy"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20dp"
            android:layout_height="match_parent" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#e9e6e9"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_platform_mobile_normal"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="手机号"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:background="@color/colorWhite"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_platform_weixin_normal"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="微信"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_platform_sina_normal"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="新浪微博"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:src="@drawable/ic_platform_qq_normal"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="腾讯QQ"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_platform_tencent_normal"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="腾讯微博"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_platform_renren_normal"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="人人网"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="1dp"
            android:background="@color/colorWhite"
            android:layout_height="50dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_platform_kaixin_normal"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:text="开心网"
                android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_height="40dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">
            <CheckBox
                android:layout_width="wrap_content"
                android:checked="true"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:text="我同意《内涵段子用户使用协议》"
                android:layout_height="wrap_content" />

        </LinearLayout>



    </LinearLayout>
</LinearLayout>
