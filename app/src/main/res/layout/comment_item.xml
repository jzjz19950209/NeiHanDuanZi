<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.qf.neihanduanzi.CustomShapeImageView
        android:layout_width="40dp"
        android:id="@+id/details_comment_icon"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="40dp" />
    <TextView
        android:layout_width="180dp"
        android:textSize="14dp"
        android:text="用户名"
        android:id="@+id/details_username"
        android:layout_alignTop="@+id/details_comment_icon"
        android:layout_toRightOf="@+id/details_comment_icon"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:text="time"
        android:id="@+id/create_time"
        android:textSize="10dp"
        android:layout_toRightOf="@+id/details_comment_icon"
        android:layout_below="@+id/details_username"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/details_comment_icon"
        android:layout_toRightOf="@+id/details_username"
        android:layout_height="40dp">
        <ImageView
            android:layout_width="40dp"
            android:id="@+id/details_dig"
            android:src="@drawable/ic_digg_normal"
            android:layout_height="40dp" />
        <TextView
            android:layout_width="wrap_content"
            android:text="0000"
            android:id="@+id/details_up"
            android:gravity="center_vertical"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_width="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_more_action_normal"
            android:id="@+id/details_share"
            android:layout_height="40dp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/details_comment"
        android:textSize="15dp"
        android:layout_alignLeft="@+id/details_username"
        android:layout_below="@+id/create_time"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content" />
</RelativeLayout>